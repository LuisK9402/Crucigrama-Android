<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/main_bg">

        <TextView
            android:layout_width="191dp"
            android:layout_height="216dp"
            android:background="@drawable/trophy"
            android:textSize="20dp"
            android:layout_marginBottom="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has Ganado!"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="?attr/options_txt"
            android:layout_marginBottom="25dp"/>

        <Button
            android:id="@+id/winReturnBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTINUAR"
            android:textSize="30dp"
            android:textColor="?attr/button_txt"
            android:background="?attr/button_bg"
            android:padding="20dp"/>

    </LinearLayout>

</layout>